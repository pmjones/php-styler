{
    "name": "pmjones/php-styler",
    "description": "Companion to PHP-Parser that rebuilds PHP code from AST.",
    "keywords": ["style", "guide", "parser", "standard"],
    "license": "BSD-3-Clause",
    "autoload": {
        "psr-4" : {
            "PhpStyler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "PhpStyler\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1 | ^8.2 | ^8.3",
        "nikic/php-parser": "^4.17",
        "pmjones/auto-shell": "^1.0",
        "sebastian/diff": "^5.0"
    },
    "require-dev": {
        "pds/composer-script-names": "^1.0",
        "pds/skeleton": "^1.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0"
    },
    "bin": [
        "bin/php-styler"
    ],
    "scripts": {
        "analyze": "./vendor/bin/phpstan",
        "check": "composer cs-fix && composer test && composer analyze",
        "cs-fix": "php bin/php-styler apply -c php-styler.php",
        "cs-fix-check": "php bin/php-styler check -c php-styler.php",
        "cs-fix-preview": "php bin/php-styler preview -c php-styler.php",
        "test": "./vendor/bin/phpunit",
        "test-coverage": "./vendor/bin/phpunit --coverage-html=./tmp/coverage"
    }
}
